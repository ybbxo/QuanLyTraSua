@{
    ViewData["Title"] = "Chính sách đổi trả";
}
<section class="hero text-white text-center py-5" style="background: url('/images/hero_return.jpg') center/cover no-repeat; border-radius: 14px;">
    <div class="container py-5">
        <h1 class="fw-bold display-5">Chính sách đổi trả</h1>
        <p class="lead">Bảo vệ quyền lợi khách hàng – Cam kết chất lượng</p>
    </div>
</section>
<section class="py-5">
    <div class="container">
        <h2 class="fw-bold mb-4">Điều kiện đổi trả</h2>
        <div class="row g-4">
            <div class="col-md-6">
                <div class="p-4 rounded-4 bg-light shadow-sm h-100">
                    <h5 class="fw-bold text-success">Trường hợp được đổi trả</h5>
                    <ul>
                        <li>Sản phẩm giao sai, hỏng, đổ, kém chất lượng.</li>
                        <li>Thông báo trong vòng 24h kể từ khi nhận hàng.</li>
                        <li>Còn giữ hóa đơn hoặc thông tin đặt hàng.</li>
                    </ul>
                </div>
            </div>
            <div class="col-md-6">
                <div class="p-4 rounded-4 bg-light shadow-sm h-100">
                    <h5 class="fw-bold text-danger">Trường hợp không hỗ trợ</h5>
                    <ul>
                        <li>Sản phẩm đã dùng quá 50%.</li>
                        <li>Không có bằng chứng xác nhận mua hàng tại XYZ.</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
