@{
    ViewData["Title"] = "Liên hệ";
}
<section class="hero text-white text-center py-5" style="background: url('/images/hero_contact.jpg') center/cover no-repeat; border-radius: 14px;">
    <div class="container py-5">
        <h1 class="fw-bold display-5">Liên hệ & Hỗ trợ</h1>
        <p class="lead">Chúng tôi luôn sẵn sàng lắng nghe bạn</p>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-5">
                <h4 class="fw-bold mb-3">Thông tin liên hệ</h4>
                <p><i class="bi bi-geo-alt"></i> 123 Nguyễn Trãi, Q.1, TP.HCM</p>
                <p><i class="bi bi-telephone"></i> <a href="tel:0909123456">0909 123 456</a></p>
                <p><i class="bi bi-envelope"></i> <a href="mailto:hotro@trasuaxyz.vn">hotro@trasuaxyz.vn</a></p>
                <p>
                    <i class="bi bi-chat-dots"></i> Chat qua <a href="https://m.me/trasuaxyz" target="_blank">Messenger</a> /
                    <a href="https://zalo.me/0909123456" target="_blank">Zalo</a>
                </p>
            </div>
            <div class="col-lg-7">
                <h4 class="fw-bold mb-3">Gửi tin nhắn cho chúng tôi</h4>
                <form class="p-4 bg-light rounded-4 shadow-sm">
                    <div class="mb-3">
                        <label class="form-label">Họ tên</label>
                        <input type="text" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Nội dung</label>
                        <textarea class="form-control" rows="4" required></textarea>
                    </div>
                    <button class="btn btn-brand btn-pill px-4" type="submit">Gửi liên hệ</button>
                </form>
            </div>
        </div>
    </div>
</section>
