@{
    ViewData["Title"] = "Chỉnh sửa Admin";
    var adminName = ViewBag.AdminName as string ?? "Admin";
}
<div class="card mx-auto" style="max-width:600px;">
    <div class="card-header bg-success text-white">
        <h4>Chỉnh sửa Admin</h4>
    </div>
    <div class="card-body">
        <form asp-action="ChinhSuaAdmin" method="post">
            <div class="mb-3">
                <label class="form-label">Họ và tên</label>
                <input class="form-control" name="hoTen" value="@adminName" />
            </div>
            <div class="mb-3">
                <label class="form-label">Mật khẩu (để trống nếu không đổi)</label>
                <input class="form-control" name="matKhau" type="password" />
            </div>
            <button type="submit" class="btn btn-success">Cập nhật</button>
        </form>
    </div>
</div>
