@using WebTraSua.Data
@inject ApplicationDbContext ctx
<!DOCTYPE html>
<html lang="vi" data-theme="light">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trà Sữa XYZ</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />

    <style>
        :root {
            --brand: #ff7b54;
            --brand-light: #ffd3b6;
            --ink: #2b2b2b;
            --muted: #6c757d;
            --radius: 14px;
            --navbar-h: 70px;
            --bg-body: #fffaf5;
            --bg-footer: #222;
            --text-footer: #ddd;
        }

        [data-theme="dark"] {
            --bg-body: #121212;
            --ink: #f1f1f1;
            --muted: #aaa;
            --bg-footer: #1a1a1a;
            --text-footer: #ccc;
        }

        body {
            margin: 0;
            font-family: "Inter", system-ui, sans-serif;
            color: var(--ink);
            background: var(--bg-body);
            transition: background .3s, color .3s;
        }

        .navbar {
            position: sticky;
            top: 0;
            z-index: 1050;
            background: rgba(255,255,255,.92);
            backdrop-filter: saturate(150%) blur(10px);
            border-bottom: 1px solid rgba(0,0,0,.05);
        }

        [data-theme="dark"] .navbar {
            background: rgba(20,20,20,.92);
            border-color: rgba(255,255,255,.05);
        }

        .navbar-brand {
            font-weight: 800;
            font-size: 20px;
            letter-spacing: .3px;
        }

        .nav-link {
            font-weight: 600;
            color: var(--ink) !important;
            transition: all .3s;
        }

            .nav-link:hover, .nav-link.active {
                color: var(--brand) !important;
                font-weight: bold;
            }

        .hero {
            min-height: calc(100vh - var(--navbar-h));
            display: grid;
            place-items: center;
            position: relative;
            border-radius: 0 0 var(--radius) var(--radius);
            overflow: hidden;
        }

            .hero::before {
                content: "";
                position: absolute;
                inset: 0;
                background: url('/images/hero_tra_sua.jpg') center/cover no-repeat;
            }

            .hero::after {
                content: "";
                position: absolute;
                inset: 0;
                background: linear-gradient(180deg, rgba(0,0,0,.35), rgba(0,0,0,.1) 40%, rgba(255,255,255,0) 70%);
            }

        .hero-content {
            position: relative;
            z-index: 1;
            color: #fff;
            text-align: center;
            padding: 0 18px;
        }

        .hero-title {
            font-weight: 900;
            font-size: clamp(28px,4.5vw,52px);
            line-height: 1.1;
            text-shadow: 0 6px 30px rgba(0,0,0,.4);
        }

        .footer {
            background: var(--bg-footer);
            color: var(--text-footer);
            font-size: 15px;
        }

            .footer a {
                color: var(--text-footer);
                text-decoration: none;
            }

                .footer a:hover {
                    color: var(--brand);
                }

        #darkModeToggle {
            cursor: pointer;
            font-size: 1.2rem;
        }

        .btn-theme {
            transition: all .3s;
        }

        [data-theme="light"] .btn-theme-outline {
            color: var(--brand);
            border-color: var(--brand);
            background-color: transparent;
        }

        [data-theme="light"] .btn-theme-solid {
            color: #fff;
            background-color: var(--brand);
            border-color: var(--brand);
        }

        [data-theme="dark"] .btn-theme-outline {
            color: var(--brand);
            border-color: var(--brand);
            background-color: transparent;
        }

        [data-theme="dark"] .btn-theme-solid {
            color: #fff;
            background-color: var(--brand);
            border-color: var(--brand);
        }

        .dropdown-menu {
            border-radius: var(--radius);
            border: 1px solid rgba(0,0,0,.1);
            transition: all .3s;
        }

            .dropdown-menu .dropdown-item:hover, .dropdown-menu .dropdown-item.active {
                background-color: rgba(255,123,84,0.15);
                color: var(--brand) !important;
            }

        .fade-out {
            opacity: 0;
            transition: opacity 0.5s ease;
        }
    </style>
</head>
<body>
    @{
        var danhMucs = ctx?.DanhMucSanPhams.ToList() ?? new();
        var role = Context.Session.GetString("Role");
        var name = Context.Session.GetString("HoTen");
        var currentPath = Context.Request.Path.Value?.ToLower() ?? "";
        var successMsg = TempData["Success"]?.ToString();
        var errorMsg = TempData["Error"]?.ToString();
    }
    <nav class="navbar navbar-expand-lg shadow-sm py-3">
        <div class="container">
            <a class="navbar-brand text-brand" href="/">🥤 TRÀ SỮA XYZ</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between" id="navbarMain">
                <ul class="navbar-nav mx-auto mb-2 mb-lg-0 gap-3">
                    <li class="nav-item"><a class="nav-link @(currentPath == "/" ? "active" : "")" href="/">Trang chủ</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle @(currentPath.Contains("/sanpham/danhmuc") ? "active" : "")" href="#" data-bs-toggle="dropdown">Menu</a>
                        <ul class="dropdown-menu">
                            @foreach (var dm in danhMucs)
                            {
                                <li><a class="dropdown-item @(currentPath.Contains($"/sanpham/danhmuc/{dm.MaDM}".ToLower()) ? "active" : "")" href="/SanPham/DanhMuc/@dm.MaDM">@dm.TenDM</a></li>
                            }
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle @(currentPath.Contains("/thongtin") ? "active" : "")" href="#" data-bs-toggle="dropdown">Hỗ trợ</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item @(currentPath.Contains("/thongtin/gioithieu") ? "active" : "")" href="/ThongTin/GioiThieu">Giới thiệu</a></li>
                            <li><a class="dropdown-item @(currentPath.Contains("/thongtin/chinhsachgiaohang") ? "active" : "")" href="/ThongTin/ChinhSachGiaoHang">Chính sách giao hàng</a></li>
                            <li><a class="dropdown-item @(currentPath.Contains("/thongtin/chinhsachdoitra") ? "active" : "")" href="/ThongTin/ChinhSachDoiTra">Chính sách đổi trả</a></li>
                            <li><a class="dropdown-item @(currentPath.Contains("/thongtin/lienhe") ? "active" : "")" href="/ThongTin/LienHe">Liên hệ</a></li>
                        </ul>
                    </li>
                    <li class="nav-item"><a class="nav-link @(currentPath == "/" ? "active" : "")" href="/GioHang/XemGioHang">Giỏ hàng</a></li>
                </ul>
                <form class="d-flex me-3" asp-controller="SanPham" asp-action="TimKiem" method="get">
                    <input class="form-control rounded-pill me-2" type="search" name="keyword" placeholder="Tìm sản phẩm..." value="@ViewBag.Keyword">
                    <button class="btn btn-outline-warning rounded-pill" type="submit"><i class="bi bi-search"></i></button>
                </form>

                <div class="d-flex align-items-center gap-2">
                    <span id="darkModeToggle" title="Chuyển đổi chế độ"><i class="bi bi-moon-fill"></i></span>
                    @if (!string.IsNullOrEmpty(name))
                    {
                        <div class="dropdown ms-2">
                            <a class="btn btn-outline-secondary rounded-pill dropdown-toggle" href="#" data-bs-toggle="dropdown">👤 @name</a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                @if (role?.ToLower() == "quanly")
                                {
                                    <li><a class="dropdown-item fw-bold text-primary" href="/QuanLy">Trang Quản Lý</a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                }
                                <li><a class="dropdown-item" href="/TaiKhoan/ThongTin">Thông tin cá nhân</a></li>
                                <li><a class="dropdown-item" href="/DonHang/LichSu">Đơn hàng của tôi</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">Đăng xuất</a>
                            </ul>
                        </div>
                    }
                    else
                    {
                        string loginClass = currentPath.Contains("/account/login") ? "btn btn-theme btn-theme-solid rounded-pill px-3" : "btn btn-theme btn-theme-outline rounded-pill px-3";
                        string registerClass = currentPath.Contains("/account/register") ? "btn btn-theme btn-theme-solid rounded-pill px-3" : "btn btn-theme btn-theme-outline rounded-pill px-3";
                        <div class="d-flex gap-2">
                            <a href="/Account/Login" class="@loginClass">Đăng nhập</a>
                            <a href="/Account/Register" class="@registerClass">Đăng ký</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </nav>
    <div class="container mt-3">
        @if (!string.IsNullOrEmpty(successMsg))
        {
            <div class="alert alert-success text-center" id="tempSuccess">@successMsg</div>
        }
        @if (!string.IsNullOrEmpty(errorMsg))
        {
            <div class="alert alert-danger text-center" id="tempError">@errorMsg</div>
        }
    </div>
    @RenderSection("Hero", required: false)
    <main class="container my-5">
        @RenderBody()
    </main>
    <footer class="footer pt-5 pb-3 mt-5">
        <div class="container">
            <div class="row g-4">
                <div class="col-md-3">
                    <h5 class="fw-bold">Trà Sữa XYZ</h5>
                    <p>Ngọt ngào – Tươi mát – Đậm vị. Mang đến trải nghiệm trà sữa chất lượng, phục vụ tận tâm.</p>
                </div>
                <div class="col-md-3">
                    <h5 class="fw-bold">Liên hệ</h5>
                    <ul class="list-unstyled">
                        <li><i class="bi bi-geo-alt"></i> 123 Nguyễn Trãi, Q.1, TP.HCM</li>
                        <li><i class="bi bi-telephone"></i> <a href="tel:0909123456">0909 123 456</a></li>
                        <li><i class="bi bi-envelope"></i> <a href="mailto:hotro@trasuaxyz.vn">hotro@trasuaxyz.vn</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5 class="fw-bold">Hỗ trợ</h5>
                    <ul class="list-unstyled">
                        <li><a href="/ThongTin/GioiThieu">Giới thiệu</a></li>
                        <li><a href="/ThongTin/ChinhSachGiaoHang">Chính sách giao hàng</a></li>
                        <li><a href="/ThongTin/ChinhSachDoiTra">Chính sách đổi trả</a></li>
                        <li><a href="/ThongTin/LienHe">Liên hệ</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5 class="fw-bold">Kết nối</h5>
                    <div class="d-flex gap-3 fs-4">
                        <a href="https://facebook.com" target="_blank"><i class="bi bi-facebook"></i></a>
                        <a href="https://instagram.com" target="_blank"><i class="bi bi-instagram"></i></a>
                        <a href="https://tiktok.com" target="_blank"><i class="bi bi-tiktok"></i></a>
                        <a href="https://zalo.me/0909123456" target="_blank"><i class="bi bi-chat-dots"></i></a>
                    </div>
                </div>
            </div>
            <hr class="border-secondary my-4" />
            <div class="text-center small">© @DateTime.Now.Year Trà Sữa XYZ. All rights reserved.</div>
        </div>
    </footer>
    <div style="position:fixed;bottom:20px;right:20px;z-index:999;display:flex;flex-direction:column;gap:10px;">
        <a href="https://m.me/trasuaxyz" target="_blank"><img src="/images/messenger.png" width="50" /></a>
        <a href="https://zalo.me/0909123456" target="_blank"><img src="/images/zalo.png" width="50" /></a>
    </div>
    <a href="/SanPham/DanhMuc/1" class="btn btn-danger rounded-pill px-4 py-2 shadow-lg"
       style="position:fixed;bottom:20px;left:20px;z-index:999;">
        🍹 Đặt ngay
    </a>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const toggle = document.getElementById('darkModeToggle');
        const html = document.documentElement;
        const icon = toggle.querySelector('i');
        const savedTheme = localStorage.getItem('theme') || 'light';
        html.setAttribute('data-theme', savedTheme);
        if(savedTheme === 'dark') icon.className = 'bi bi-sun-fill';
        toggle.addEventListener('click', ()=>{
            let current = html.getAttribute('data-theme');
            if(current==='light'){
                html.setAttribute('data-theme','dark');
                icon.className='bi bi-sun-fill';
                localStorage.setItem('theme','dark');
            }else{
                html.setAttribute('data-theme','light');
                icon.className='bi bi-moon-fill';
                localStorage.setItem('theme','light');
            }
        });
        setTimeout(()=>{
            const success = document.getElementById('tempSuccess');
            const error = document.getElementById('tempError');
            if(success) success.classList.add('fade-out');
            if(error) error.classList.add('fade-out');
        },5000);
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
