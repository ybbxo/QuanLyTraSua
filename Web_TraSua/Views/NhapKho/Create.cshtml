@model WebTraSua.Models.NhapKho
@{
    ViewData["Title"] = "Thêm phiếu nhập kho";
    var allNL = ViewBag.AllNguyenLieu as List<WebTraSua.Models.NguyenLieu> ?? new();
    var allNV = ViewBag.AllNhanVien as List<WebTraSua.Models.NhanVien> ?? new();
}
<div class="container my-4">
    <div class="row">
        <div class="col-lg-3 mb-3">
            @await Html.PartialAsync("~/Views/Shared/_AdminSidebar.cshtml")
        </div>
        <div class="col-lg-9">
            <div class="card shadow-sm rounded-4">
                <div class="card-body">
                    <h4 class="mb-3">Thêm phiếu nhập kho</h4>
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="mb-3">
                            <label class="form-label">Nguyên liệu</label>
                            <select class="form-select" asp-for="MaNL" required>
                                <option value="" disabled selected>-- Chọn nguyên liệu --</option>
                                @foreach (var nl in allNL)
                                {
                                    <option value="@nl.MaNL">@nl.TenNL (@nl.DonViTinh)</option>
                                }
                            </select>
                            <span asp-validation-for="MaNL" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Số lượng</label>
                            <input asp-for="SoLuong" type="number" min="1" class="form-control" required />
                            <span asp-validation-for="SoLuong" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Nhân viên nhập</label>
                            <select class="form-select" asp-for="MaNV" required>
                                <option value="" disabled selected>-- Chọn nhân viên --</option>
                                @foreach (var nv in allNV)
                                {
                                    <option value="@nv.MaNV">@nv.HoTen</option>
                                }
                            </select>
                            <span asp-validation-for="MaNV" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Ngày nhập</label>
                            <input asp-for="NgayNhap"
                                   type="datetime-local"
                                   class="form-control"
                                   value="@(Model?.NgayNhap==default ? DateTime.Now.ToString("yyyy-MM-ddTHH:mm") : Model.NgayNhap.ToString("yyyy-MM-ddTHH:mm"))" />
                            <span asp-validation-for="NgayNhap" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button class="btn btn-primary" type="submit">Lưu</button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Huỷ</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
