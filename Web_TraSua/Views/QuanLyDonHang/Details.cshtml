@model WebTraSua.Models.HoaDon
@{
    ViewData["Title"] = "Chi tiết đơn hàng";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
<div class="container py-5">
    <h2 class="mb-4">Chi tiết đơn hàng: <strong>@Model.MaHD</strong></h2>
    <div class="card p-4 shadow-sm">
        <div class="row mb-3">
            <div class="col-md-4">
                <strong>Khách hàng:</strong> @(Model.KhachHang?.HoTen ?? Model.TenNguoiNhan ?? "Khách lẻ")
            </div>
            <div class="col-md-4"><strong>Nhân viên:</strong> @(Model.NhanVien?.HoTen ?? "Chưa có")</div>
            <div class="col-md-4"><strong>Ngày lập:</strong> @Model.NgayLap.ToString("yyyy-MM-dd HH:mm")</div>
        </div>
        <div class="row mb-3">
            <div class="col-md-4"><strong>Tổng tiền:</strong> <span class="text-success fw-bold">@Model.TongTien.ToString("#,0 VNĐ")</span></div>
            <div class="col-md-4">
                <strong>Trạng thái:</strong>
                <span class="badge
                    @(Model.TrangThai == "HoanTat" ? "bg-success" :
                                            Model.TrangThai == "ChoXacNhan" ? "bg-warning text-dark" :
                                            Model.TrangThai == "Huy" ? "bg-danger" : "bg-secondary")">
                    @Model.TrangThai
                </span>
            </div>
        </div>
        <h5 class="mt-4">Chi tiết sản phẩm</h5>
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>Sản phẩm</th>
                        <th>Size</th>
                        <th>Số lượng</th>
                        <th>Đơn giá</th>
                        <th>Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ct in Model.ChiTietHoaDons)
                    {
                        <tr>
                            <td>@ct.SanPham?.TenSP</td>
                            <td>@ct.Size?.TenSize</td>
                            <td>@ct.SoLuong</td>
                            <td>@ct.DonGia.ToString("#,0 VNĐ")</td>
                            <td>
                                @(ct.ThanhTien != 0
                                                            ? ct.ThanhTien.ToString("#,0 VNĐ")
                                                            : (ct.SoLuong * ct.DonGia).ToString("#,0 VNĐ"))
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="mt-4">
            <a href="@Url.Action("Index", "QuanLyDonHang")" class="btn btn-secondary">← Quay lại danh sách</a>
        </div>
    </div>
</div>
