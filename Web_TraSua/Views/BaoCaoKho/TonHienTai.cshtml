@model List<(int MaNL,string TenNL,string DVT,decimal Ton)>
@{
    ViewData["Title"] = "Tồn kho hiện tại";
}
<div class="container my-4">
    <div class="row">
        <div class="col-lg-3 mb-3">@await Html.PartialAsync("~/Views/Shared/_AdminSidebar.cshtml")</div>
        <div class="col-lg-9">
            <div class="card shadow-sm rounded-4">
                <div class="card-body">
                    <h4 class="mb-3">Tồn kho hiện tại</h4>
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead><tr><th>Mã</th><th>Nguyên liệu</th><th>ĐVT</th><th class="text-end">Tồn</th></tr></thead>
                            <tbody>
                                @foreach (var r in Model)
                                {
                                    <tr class="@(r.Ton<=100? "table-warning":"")">
                                        <td>@r.MaNL</td>
                                        <td>@r.TenNL</td>
                                        <td>@r.DVT</td>
                                        <td class="text-end">@r.Ton</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
